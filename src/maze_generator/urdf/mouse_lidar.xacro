<?xml version="1.0" ?>
<robot name="mouse" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <material name="black">
    <color rgba="0.0 0.0 0.0 1.0"/>
  </material>
  <material name="blue">
    <color rgba="0.203125 0.23828125 0.28515625 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 0.8 0.0 1.0"/>
  </material>
  <material name="grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="brown">
    <color rgba="0.870588235294 0.811764705882 0.764705882353 1.0"/>
  </material>
  <material name="red">
    <color rgba="0.80078125 0.12890625 0.1328125 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>
  
  <gazebo reference="link_chassis">
    <material>Gazebo/Orange</material>
  </gazebo>
  <gazebo reference="link_caster">
    <material>Gazebo/Gray</material>
  </gazebo>
  <gazebo reference="link_left_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>
  <gazebo reference="link_right_wheel">
    <material>Gazebo/Blue</material>
  </gazebo>
  
  <!-- =========================================== -->
  <!-- ROBOT DESCRIPTION -->
  <!-- =========================================== -->
  <!-- Chassis -->
  <link name="chassis_base">
    <collision name="collision_chassis">
      <origin rpy="0 0 0" xyz="0 0 -0.006"/>
      <geometry>
        <box size="0.48 0.48 0.012"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://maze_generator/urdf/meshes/umouse_base.stl" scale="0.003 0.003 0.003"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="chassis_inertia">
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 0 0" xyz="0 0 -0.006"/>
      <inertia ixx="0.0038424" ixy="0" ixz="0" iyy="0.0038424" iyz="0" izz="0.00768"/>
    </inertial>
  </link>

  <joint name="fixed_inertia" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="chassis_base"/>
    <child link="chassis_inertia"/>
  </joint>

  <link name="chassis_sensors">
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0.096"/>
      <inertia ixx="0.011136" ixy="0" ixz="0" iyy="0.011136" iyz="0" izz="0.0192"/>
    </inertial>
    <collision name="collision_chassis">
      <origin rpy="0 0 0" xyz="0 0 0.096"/>
      <geometry>
        <box size="0.48 0.48 0.192"/>
      </geometry>
    </collision>
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://maze_generator/urdf/meshes/umouse_lidar.stl" scale="0.003 0.003 0.003"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <joint name="fixed_base" type="fixed">
    <origin rpy="0 0 0" xyz="0 0 0"/>
    <parent link="chassis_base"/>
    <child link="chassis_sensors"/>
  </joint>

  <link name="sensor_lidar">
    <inertial>
      <mass value="0.19"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.00121125" ixy="0" ixz="0" iyy="0.001799063" iyz="0" izz="0.001984313"/>
    </inertial>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.285 0.21 0.18"/>
      </geometry>
    </collision>
  </link>

  <joint name="fixed_sensor" type="fixed">
    <origin rpy="0 0 0" xyz="0.06225 0 0.28"/>
    <parent link="chassis_sensors"/>
    <child link="sensor_lidar"/>
  </joint>

  <!-- Front castor wheel -->
  <link name="fcastor_wheel">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 -0.012"/>
      <geometry>
        <mesh filename="package://maze_generator/urdf/meshes/umouse_casterball.stl" scale="0.003 0.003 0.003"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 -0.03375"/>
      <geometry>
        <sphere radius="0.02175"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 -0.03375"/>
      <mass value="0.1" />
      <inertia ixx="0.000014516" ixy="0.0" ixz="0.0" iyy="0.000014516" iyz="0.0" izz="0.000014516"/>
    </inertial>
  </link>
  
  <joint name="base__fcastor_wheel" type="continuous">
    <parent link="chassis_base"/>
    <child link="fcastor_wheel"/>
    <origin xyz="0.21 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Back castor wheel -->
  <link name="bcastor_wheel">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 -0.012"/>
      <geometry>
        <mesh filename="package://maze_generator/urdf/meshes/umouse_casterball.stl" scale="0.003 0.003 0.003"/>
      </geometry>
    </visual>
    <collision>
      <origin rpy="0 0 0" xyz="0 0 -0.03375"/>
      <geometry>
        <sphere radius="0.02175"/>
      </geometry>
    </collision>
    <inertial>
      <origin rpy="0 0 0" xyz="0 0 -0.03375"/>
      <mass value="0.1" />
      <inertia ixx="0.000014516" ixy="0.0" ixz="0.0" iyy="0.000014516" iyz="0.0" izz="0.000014516"/>
    </inertial>
  </link>
  
  <joint name="base__bcastor_wheel" type="continuous">
    <parent link="chassis_base"/>
    <child link="bcastor_wheel"/>
    <origin xyz="-0.21 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Right wheel -->
  <link name="link_right_wheel">
    <inertial>
      <mass value="0.12"/>
      <origin rpy="0 1.5707 -1.5707" xyz="0 0 0"/>
      <inertia ixx="0.000252" ixy="0" ixz="0" iyy="0.000252" iyz="0" izz="0.000486"/>
    </inertial>
    <collision name="link_right_wheel_collision">
      <origin rpy="0 1.570796 1.570796" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.09"/>
      </geometry>
    </collision>
    <visual name="link_right_wheel_visual">
      <origin rpy="0 0 -1.570796" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://maze_generator/urdf/meshes/umouse_wheel.stl" scale="0.003 0.003 0.003"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="joint_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 0.231 0.0345"/>
    <child link="link_right_wheel"/>
    <parent link="chassis_base"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <!-- Left wheel -->  
  <link name="link_left_wheel">
    <inertial>
      <mass value="0.12"/>
      <origin rpy="0 1.5707 -1.5707" xyz="0 0 0"/>
      <inertia ixx="0.000252" ixy="0" ixz="0" iyy="0.000252" iyz="0" izz="0.000486"/>
    </inertial>
    <collision name="link_left_wheel_collision">
      <origin rpy="0 1.570796 1.570796" xyz="0 0 0"/>
      <geometry>
        <cylinder length="0.03" radius="0.09"/>
      </geometry>
    </collision>
    <visual name="link_left_wheel_visual">
      <origin rpy="0 0 1.570796" xyz="0 0 0"/>
      <geometry>
        <mesh filename="package://maze_generator/urdf/meshes/umouse_wheel.stl" scale="0.003 0.003 0.003"/>
      </geometry>
    </visual>
  </link>
  
  <joint name="joint_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="0 -0.231 0.0345"/>
    <child link="link_left_wheel"/>
    <parent link="chassis_base"/>
    <axis rpy="0 0 0" xyz="0 1 0"/>
    <limit effort="10000" velocity="1000"/>
    <joint_properties damping="1.0" friction="1.0"/>
  </joint>

  <!-- IMU Sensor -->
  <link name="imu_link"/>

  <joint name="imu_joint" type="fixed">
    <parent link="chassis_base"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <gazebo reference="imu_link">
    <sensor type="imu" name="imu">
      <always_on>true</always_on>
      <visualize>true</visualize>
    </sensor>
    <material>Gazebo/Grey</material>
  </gazebo>

  <gazebo>
    <plugin name="imu_plugin" filename="libgazebo_ros_imu.so">
      <alwaysOn>true</alwaysOn>
      <bodyName>imu_link</bodyName>
      <frameName>imu_link</frameName>
      <topicName>imu</topicName>
      <serviceName>imu_service</serviceName>
      <gaussianNoise>0.0</gaussianNoise>
      <updateRate>200</updateRate>
      <imu>
        <noise>
          <type>gaussian</type>
          <rate>
            <mean>0.0</mean>
            <stddev>2e-4</stddev>
            <bias_mean>0.0000075</bias_mean>
            <bias_stddev>0.0000008</bias_stddev>
          </rate>
          <accel>
            <mean>0.0</mean>
            <stddev>1.7e-2</stddev>
            <bias_mean>0.1</bias_mean>
            <bias_stddev>0.001</bias_stddev>
          </accel>
        </noise>
      </imu>
    </plugin>
  </gazebo>

  <!-- LiDAR Sensor -->
  <joint name="scan_joint" type="fixed">
    <parent link="chassis_base"/>
    <child link="link_scan"/>
    <origin xyz="0.20 0 0.324" rpy="0 0 -1.57079"/>
  </joint>

  <link name="link_scan">
  </link>

  <gazebo reference="link_scan">
    <sensor type="ray" name="lidar_sensor">
      <pose>0 0 0 0 0 0</pose>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>0.0</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.12</min>
          <max>4.8</max>
          <resolution>0.015</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="gazebo_ros_lidar_controller" filename="libgazebo_ros_laser.so">
        <topicName>scan</topicName>
        <frameName>link_scan</frameName>
      </plugin>
    </sensor>
    <material>Gazebo/FlatBlack</material>
  </gazebo>

  <!-- Controller -->
  <gazebo>
    <plugin name="mouse_controller" filename="libgazebo_ros_diff_drive.so">
      <commandTopic>cmd_vel</commandTopic>
      <odometryTopic>odom</odometryTopic>
      <odometryFrame>odom</odometryFrame>
      <odometrySource>world</odometrySource>
      <publishOdomTF>true</publishOdomTF>
      <robotBaseFrame>chassis_base</robotBaseFrame>
      <publishWheelTF>false</publishWheelTF>
      <publishTf>true</publishTf>
      <publishWheelJointState>true</publishWheelJointState>
      <legacyMode>false</legacyMode>
      <updateRate>30</updateRate>
      <leftJoint>joint_left_wheel</leftJoint>
      <rightJoint>joint_right_wheel</rightJoint>
      <wheelSeparation>0.4635</wheelSeparation>
      <wheelDiameter>0.18</wheelDiameter>
      <wheelAcceleration>1</wheelAcceleration>
      <wheelTorque>30</wheelTorque>
      <rosDebugLevel>na</rosDebugLevel>
    </plugin>
  </gazebo>
</robot>